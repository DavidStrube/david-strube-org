---
import MySiteLayout from "../layouts/MySiteLayout.astro"
---
<MySiteLayout pageTitle="David Strube Org"> 

  <header>
    <div class="header__text-wrapper">
      <div class="header___text-wrapper__inner-wrapper">
        <h1>Hello<br>Dave</h1>
      </div>
    </div>
    <div class="header__image-wrapper"> <img class="profile-image" src="src/assets/profile.jpeg" alt=""></div>
  </header>

</MySiteLayout>

<style>
  header {
    display: flex;
    gap: 2.5rem;
    padding: 5rem;
  }

  header > div {
    flex: 1 1 50%;

  }

  .header__text-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  h1 {
    font-size: 5rem;
  }

  .header__image-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid white;
    border-radius: 10px;
  }

  .profile-image {
    border-radius: 10px;
    width: 100%;
    max-width: 70vh;
    height: auto;
  }

  @media screen and (max-width: 700px) {

    h1 {
      font-size: 3rem;
    }

    header {
      padding: 3rem;
      gap: 1.5rem;
    }

  }

  @media screen and (max-width: 500px) {

    h1 {
      font-size: 2rem;
    }

    header {
      padding: 2rem;
      gap: 1rem;
    }



}
</style>
